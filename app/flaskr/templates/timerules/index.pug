extends timerules/layout.pug

block title
    | タイムテーブル一覧 - ペタペタシステム
block content
    table.table.table-hover
        thead
            tr
                th #
                th 名前
                th 作成日
                th 更新日
                th
        tbody
            for timerule in timerules
                tr
                    td= timerule.id
                    td= timerule.caption
                    td= timerule.create_at
                    td= timerule.update_at
                    td: .text-right
                        .btn-group
                            a.btn.btn-sm.btn-primary(href="{{ url_for('timerules.edit',id=timerule.id) }}") 編集
                            a.btn.btn-sm.btn-danger(href="{{ url_for('timerules.destroy',id=timerule.id) }}") 削除
