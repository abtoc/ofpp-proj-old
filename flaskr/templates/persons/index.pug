extends persons/layout.pug

block title
    |メンバー一覧 - ペタペタシステム
block content
    table.table.table-hover
        thead
            tr
                th #
                th
                th 名前
                th IDm
                th 作成日
                th 更新日
                th
        tbody
            for person in persons
                tr
                    td= person.id
                    if person.enabled
                        td レ
                    else
                        td
                    td= person.display
                    td= person.idm
                    td= person.create_at
                    td= person.update_at
                    td
                        .btn-group
                            a.btn.btn-sm.btn-primary(href="{{ url_for('persons.edit',id=person.id) }}") 編集
                            a.btn.btn-sm.btn-danger(href="{{ url_for('persons.destroy',id=person.id) }}") 削除
